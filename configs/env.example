# 服务器配置
PORT=8080

# 数据库配置
DB_HOST=db
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=mysecretpassword
DB_NAME=backend
DB_SSLMODE=disable

# PostgreSQL 容器初始化（供 db 服务使用）
POSTGRES_USER=postgres
POSTGRES_PASSWORD=mysecretpassword
POSTGRES_DB=backend

# Redis 配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=myredispassword
REDIS_DB=0

# SMTP 邮件服务配置
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=your-email@example.com

# 安全配置
MAX_IP_REQUESTS_PER_DAY=10

# JWT 配置
# 强烈建议修改为一个长且随机的字符串！
JWT_SECRET=a-very-secret-key-that-should-be-changed
# Access Token 过期时间（分钟）
JWT_ACCESS_TOKEN_EXPIRES_IN_MINUTES=30
# Refresh Token 过期时间（天）
JWT_REFRESH_TOKEN_EXPIRES_IN_DAYS=7

# 文件存储配置
# 默认存储（在 multi-local 下建议为 docs；在 multi-s3 下建议为 primary）
FILE_STORAGE_DEFAULT=docs

# 本地存储配置（支持多个）
FILE_STORAGE_LOCAL_NAMES=docs,avatars
# 可选：自定义路径/URL（未设置时应用将使用 ./uploads/<name> 和默认 URL）
# FILE_STORAGE_LOCAL_DOCS_PATH=./uploads/docs
# FILE_STORAGE_LOCAL_DOCS_URL=http://localhost:8080/uploads/docs
# FILE_STORAGE_LOCAL_AVATARS_PATH=./uploads/avatars
# FILE_STORAGE_LOCAL_AVATARS_URL=http://localhost:8080/uploads/avatars

# S3存储配置（支持多个）
FILE_STORAGE_S3_NAMES=primary,backups
FILE_STORAGE_S3_PRIMARY_REGION=us-east-1
FILE_STORAGE_S3_PRIMARY_BUCKET=your-primary-bucket
FILE_STORAGE_S3_PRIMARY_ACCESS_KEY=YOUR_PRIMARY_ACCESS_KEY
FILE_STORAGE_S3_PRIMARY_SECRET_KEY=YOUR_PRIMARY_SECRET_KEY
FILE_STORAGE_S3_PRIMARY_ENDPOINT=
FILE_STORAGE_S3_PRIMARY_BASE_URL=

FILE_STORAGE_S3_BACKUPS_REGION=eu-west-1
FILE_STORAGE_S3_BACKUPS_BUCKET=your-backups-bucket
FILE_STORAGE_S3_BACKUPS_ACCESS_KEY=YOUR_BACKUPS_ACCESS_KEY
FILE_STORAGE_S3_BACKUPS_SECRET_KEY=YOUR_BACKUPS_SECRET_KEY
FILE_STORAGE_S3_BACKUPS_ENDPOINT=
FILE_STORAGE_S3_BACKUPS_BASE_URL=